{
  "manifest_version": 2,
  "name": "OFCopy",
  "short_name": "OFCopy",
  "author": "Oleksandr Fedorov",
  "description": "Copy the title and the URL of a tab",
  "version": "0.2",
  "developer": {
    "name": "Oleksandr Fedorov",
    "url": "https://addons.mozilla.org/en-US/firefox/addon/ofcopy/"
  },
  "icons": {
    "48": "of_copy.svg",
    "96": "of_copy.svg"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "clipboardWrite",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html"
  }
}
